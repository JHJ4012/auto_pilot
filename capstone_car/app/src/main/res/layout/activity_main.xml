<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="바리바리"
        android:gravity="center_horizontal"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/textView_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="admin"
        android:textSize="16dp"
        android:layout_below="@+id/textView_logo"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_userName"
        app:tabIndicatorColor="#099085">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="보내는 배달" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="받는 배달" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="완료된 배달" />
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tablayout"
        android:layout_alignBottom="@+id/button_call"/>

    <Button
        android:id="@+id/button_call"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="호출하기"
        android:layout_alignParentBottom="true"
        android:background="#0DD1C0"/>

</RelativeLayout>